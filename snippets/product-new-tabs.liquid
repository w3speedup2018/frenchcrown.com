{%- if product.metafields.product_story.story -%}
<div class="Product__Tabs story_tab">
      <div class="Collapsible Collapsible--large">
        <button class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="true">
          Story <span class="Collapsible__Plus"></span>
        </button>

        <div class="Collapsible__Inner"  style="overflow: visible; height: auto;">
          <div class="Collapsible__Content">
            <div class="Rte">
              {{- product.metafields.product_story.story -}}
            </div>
          </div>
        </div>
      </div>
</div>
{%- endif -%}

{%- if product.metafields.product_description.description != blank -%}
<div class="Product__Tabs no-margin">
      <div class="Collapsible Collapsible--large">
        <button class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="false">
          Description <span class="Collapsible__Plus"></span>
        </button>

        <div class="Collapsible__Inner">
          <div class="Collapsible__Content">
            <div class="Rte">
              {{- product.metafields.product_description.description-}}
            </div>
          </div>
        </div>
      </div>
</div>
{%- endif -%}
{%- if section.settings.enable_return_tab -%}
    <div class="Product__Tabs return-tab no-margin">
          <div class="Collapsible Collapsible--large">
            <button class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="false">
              Return Policy<span class="Collapsible__Plus"></span>
            </button>
    
            <div class="Collapsible__Inner">
              <div class="Collapsible__Content">
                <div class="Rte">
                  {% if product.type contains 'Boxer' %}
                    <h4 style="text-align: center;"><strong>For hygiene Purpose, we do not accept Returns in Boxer Category</strong></h4>
                  {% elsif product.type == 'Perfume' %}
                     <h4 style="text-align: center;"><strong>Returns are not acceptable in Perfume Category</strong></h4>
                  {% else %}
                      {{ section.settings.return_tab_desc }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
    </div>
{%- endif -%}
